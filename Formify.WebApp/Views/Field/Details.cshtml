@model FieldDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Form Detayı</h2>

<div>
    <h4>Field Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>

        <dt class="col-sm-2">
            Required
        </dt>
        <dd class="col-sm-10">
            @Model.Required ? "Yes" : "No"
        </dd>

        <dt class="col-sm-2">
            Data Type
        </dt>
        <dd class="col-sm-10">
            @Model.DataType
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
</div>